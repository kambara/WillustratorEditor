import util.*;
import flash.geom.*;

class util.Distance {
	public var x:Number;
	public var y:Number;
	
	function Distance(from:Point, to:Point) {
		this.x = to.x - from.x;
		this.y = to.y - from.y;
	}
	function toString() {
		return ("x: "+x.toString()+" y: "+y.toString());
	}
	public function getLength() {
		return Math.sqrt(x*x + y*y);
	}
	public function getXLength() {
		return Math.abs(x);
	}
	public function getYLength() {
		return Math.abs(y);
	}
}